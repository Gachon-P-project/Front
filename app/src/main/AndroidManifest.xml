<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hfad.gamo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".NotificationWebViewActivity"></activity>
        <activity android:name=".ClickedBoard.ClickedPostingActivity"></activity>
        <activity android:name=".ClickedBoard.SearchActivity" />
        <activity
            android:name=".ClickedBoard.WritingActivity"
            android:windowSoftInputMode="adjustResize">

        </activity>
        <activity android:name=".ClickedBoard.ClickedBoardActivity">

        </activity>
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" >

        </activity>
        <activity android:name=".VolleyActivity" />

        <activity android:name=".SplashActivity">

        </activity>



        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
        <service
            android:name=".MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>


</manifest>