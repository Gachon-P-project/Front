<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="7dp">

    <TextView
        android:id="@+id/dialog_clicked_posting_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/dialog_clicked_posting_delete"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="수정"
        android:paddingVertical="15dp"/>

    <TextView
        android:id="@+id/dialog_clicked_posting_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dialog_clicked_posting_update"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="삭제"
        android:paddingVertical="15dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>