<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rectangle_bgwhite_corner_radius_all"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/tvDialogNickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/nickname"
        android:textSize="17sp"/>

    <EditText
        android:id="@+id/nickname_edit_text"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/tvDialogNickname"
        app:layout_constraintStart_toStartOf="@+id/tvDialogNickname"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_text_nickname"
        android:gravity="center"
        android:lines="1"
        android:maxLength="15"
        android:imeOptions="actionDone"
        />

    <TextView
        android:id="@+id/nickname_existent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/nickname_edit_text"
        app:layout_constraintStart_toStartOf="@id/nickname_edit_text"
        android:layout_marginTop="2dp"
        android:layout_marginStart="2dp"
        android:text="@string/existent_nickname"
        android:textSize="10sp"
        android:textColor="@color/light_blue"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nickname_register"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/nickname_existent"
        app:layout_constraintStart_toStartOf="@id/nickname_edit_text"
        app:layout_constraintEnd_toEndOf="@id/nickname_edit_text"
        android:layout_marginTop="10dp"
        android:text="@string/button_nickname_register"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/dialog_button_default"
        android:visibility="visible"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_dialog_nickname_cancel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_dialog_nickname_update"
        app:layout_constraintTop_toBottomOf="@id/nickname_existent"
        app:layout_constraintEnd_toStartOf="@+id/button_dialog_nickname_update"
        android:layout_marginEnd="10dp"
        android:text="닫기"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/dialog_button_lightgray"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintWidth_min="60dp"
        app:layout_constraintHeight_min="40dp"
        app:layout_constraintWidth_percent="0.25"
        android:visibility="gone"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_dialog_nickname_update"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/nickname_existent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:text="@string/button_nickname_update"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/dialog_button_default"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintWidth_min="60dp"
        app:layout_constraintHeight_min="40dp"
        app:layout_constraintWidth_percent="0.25"
        android:visibility="gone"
        />


</androidx.constraintlayout.widget.ConstraintLayout>